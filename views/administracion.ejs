<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Administración Escolar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Arial', 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    main {
      min-height: 100vh;
      padding: 2rem;
      background-color: #f8f9fa;
    }

    /* Para que el contenido no quede tapado por el sidebar */
    .contenido-principal {
      margin-left: 200px;
      width: calc(100% - 200px);
    }
  </style>
  <%- include("parciales/estilos") %>
</head>
<body>
  <%- include("parciales/sidebar") %>
  <div class="contenido-principal">
  <%
  const textoBotonAgregarSafe = typeof textoBotonAgregar !== 'undefined' ? textoBotonAgregar : '';
  const tipoBusquedaSafe = typeof tipoBusqueda !== 'undefined' ? tipoBusqueda : '';
  const idInputBusquedaSafe = typeof idInputBusqueda !== 'undefined' ? idInputBusqueda : '';
  const idModalAgregarSafe = typeof idModalAgregar !== 'undefined' ? idModalAgregar : '';
  const mostrarFiltroCursoSafe = typeof mostrarFiltroCurso !== 'undefined' ? mostrarFiltroCurso : false;
  const cursoSeleccionadoSafe = typeof cursoSeleccionado !== 'undefined' ? cursoSeleccionado : '';
%>


<%- include("parciales/header", {
  textoBotonAgregar: textoBotonAgregarSafe,
  tipoBusqueda: tipoBusquedaSafe,
  idInputBusqueda: idInputBusquedaSafe,
  idModalAgregar: idModalAgregarSafe,
  mostrarFiltroCurso: mostrarFiltroCursoSafe,
  cursoSeleccionado: cursoSeleccionadoSafe
}) %>


    <main>
      <%- body %> <!-- Aquí se inyecta alumnos.ejs -->
    </main>
  </div>
  <%- include("parciales/scripts") %>
</body>
</html>
