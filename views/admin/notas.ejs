<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Notas por Alumno</title>
  <style>
   

    h1 {
      text-align: center;
      margin-bottom: 1em;
    }
    h2 {
      display: flex;      
      justify-content: end;
    }

    .encabezado-curso {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-top: 2em;
      margin-bottom: 0.5em;
    }

    .encabezado-curso h2 {
      margin: 0;
      font-size: 1.4em;
    }

    .encabezado-curso .materia-profesor {
      font-size: 1.1em;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2em;
    }

    th, td {
      padding: 6px;
      border: 1px solid #ccc;
      text-align: center;
      font-size: 13px;
    }

    thead tr:first-child th {
      background-color: #cce5ff;
      font-weight: bold;
    }

    .promedio-trimestral {
      background-color: #f8f6f1;
      font-weight: bold;
    }

    .promedio-final {
      background-color: #ffeeba;
      font-weight: bold;
    }

    .nota {
      width: 80px;
      background-color: #f9f9f9;
      white-space: nowrap;
      font-family: monospace;
      font-size: 0.9em;
    }

    .nota-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2px;
      font-family: monospace;
      font-size: 0.9em;
      padding: 2px;
    }

    .nota-celda {
      background-color: #ffffff;
      border: 1px solid #ccc;
      padding: 4px;
    }

    .promedio, .examen {
      width: 50px;
    }

    /* Estilo general tabla */
    .tabla-curso {
      border: 2px solid #070303;
      border-radius: 4px;
      margin-bottom: 2em;
    }

    /* Colores por curso */
    .tabla-curso-curso-primero {
      border: 2px solid #0726d3;
      background-color: #f3faff;
    }

    .tabla-curso-curso-segundo {
      border: 2px solid #1d8d07;
      background-color: #f9fff3;
    }

    .tabla-curso-curso-tercero {
      border: 2px solid #d1c405;
      background-color: #fffaf3;
    }

    .tabla-curso-curso-cuarto {
      border: 2px solid #eb2b2b;
      background-color: #fff5f5;
    }

    .tabla-curso-curso-quinto {
      border: 2px solid #ac07ac;
      background-color: #fcf0ff;
    }

    @media (max-width: 768px) {
      .contenido-principal {
    padding-top: 60px;
  }

  @media (max-width: 768px) {
  table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }

  th, td {
    min-width: 100px; /* ancho m√≠nimo para que no se comprima demasiado */
    font-size: 12px;
  }
}


  h1 {
    font-size: 18px;
  }

  h2 {
    font-size: 16px;
  }

  h3 {
    font-size: 14px;
  }


 }
  </style>
</head>
<body>
  <h1>Notas Cargadas por los Profesores</h1>
<div id="contenedorNotas">
  <% cursos.forEach(curso => { %>
    <h2>Curso: <%= curso.curso %></h2>

    <% curso.materias.forEach(materia => { %>
      <h3>Materia: <%= materia.materia_nombre %></h3>
    <div class="profesor">Profesor: <%= materia.profesor_nombre %> <%= materia.profesor_apellido %></div>


      <table class="tabla-curso-curso-<%= curso.curso.toLowerCase().replace(/\s/g, '-') %>">

        <thead>
  <tr>
  <th>Alumno</th>
  <% [1, 2, 3].forEach(tri => { %>
    <th>Notas</th>
    <th class="promedio-trimestral">Prom.</th>
  <% }) %>

  <th>Ex. Dic</th>
  <th>Ex. Mar</th>
  <th>Promedio Final</th>
</tr>
<tr>
  <th></th>
  <% [1, 2, 3].forEach(() => { %>
  <th></th>
  <th class="promedio-trimestral"></th>
<% }) %>

  <th></th><th></th><th class="promedio-final"></th>
</tr>

</thead>

        <tbody>
  <% materia.alumnos.forEach(alumno => { %>
  <tr>
    <td><%= alumno.nombre %> <%= alumno.apellido %></td>

    <% // C√°lculo CORREGIDO del promedio final (antes del loop de notas, para no repetir) %>
    <% 
      // 1. Calcular promedios truncados por trimestre
      const promediosTrim = alumno.notas.map(nota => { 
        const notasValidas = Object.values(nota.calificaciones)
          .map(n => parseFloat(n))
          .filter(n => !isNaN(n));
        const promedioTri = notasValidas.length 
          ? (notasValidas.reduce((a, b) => a + b, 0) / notasValidas.length)
          : null;
        return promedioTri !== null ? Math.trunc(promedioTri * 100) / 100 : null;
      }).filter(p => p !== null);

      // 2. Promedio de los promedios trimestrales, truncado
      const avg = promediosTrim.length 
        ? (promediosTrim.reduce((a, b) => a + b, 0) / promediosTrim.length)
        : null;
      let final = avg !== null ? Math.trunc(avg * 100) / 100 : null;

      // 3. L√≥gica de ex√°menes (igual que antes)
      const exDic = parseFloat(alumno.examen_dic);
      const exMar = parseFloat(alumno.examen_mar);

      if (final !== null && !isNaN(final) && final >= 6) {
        final = final;
      } else if (!isNaN(exDic) && exDic >= 6) {
        final = exDic;
      } else if (!isNaN(exMar) && exMar >= 6) {
        final = exMar;
      } else if (final !== null) {
        final = final;
      }
    %>

    <% // Ahora el loop para mostrar notas por trimestre (sin cambios, solo usa el promedio por tri) %>
    <% alumno.notas.forEach(nota => { 
      const notasValidas = Object.values(nota.calificaciones)
        .map(n => parseFloat(n))
        .filter(n => !isNaN(n));
      const promedio = notasValidas.length 
        ? Math.trunc((notasValidas.reduce((a, b) => a + b, 0) / notasValidas.length) * 100) / 100
        : '';
    %>
      <td class="nota">
        <div class="nota-grid">
          <% [1, 2, 3, 4].forEach(i => { %>
            <div class="nota-celda"><%= nota.calificaciones[i] !== null ? nota.calificaciones[i] : '-' %></div>
          <% }) %>
        </div>
      </td>
      <td class="promedio-trimestral"><%= promedio %></td>
    <% }) %>

    <td class="examen"><%= alumno.examen_dic !== undefined ? alumno.examen_dic : '-' %></td>
    <td class="examen"><%= alumno.examen_mar !== undefined ? alumno.examen_mar : '-' %></td>

    <td class="promedio-final">
      <%= (final !== null && !isNaN(final)) ? final : '-' %>
    </td>
  </tr>
<% }) %>
</tbody>

      </table>
          <div class="text-end mt-2">
      <a href="/admin/notas/imprimir/<%= curso.curso_id %>/<%= materia.materia_id %>" 
        target="_blank"
        class="btn btn-sm btn-secondary">
        üñ®Ô∏è Imprimir
      </a>
    </div>

    <% }) %>
  <% }) %>
  </div>
</body>
</html>


<script src="/js/adminNotas.js"></script>
