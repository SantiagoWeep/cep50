<header class="bg-white border-bottom p-3 d-flex justify-content-between align-items-center shadow-sm sticky-top">
  <div class="d-flex align-items-center">
    <i class="bi bi-search me-2 fs-5"></i>
    <input 
      type="text" 
      class="form-control form-control-sm" 
      placeholder="Buscar por <%= tipoBusqueda %>..." 
      id="<%= idInputBusqueda %>" 
      style="width: 300px;"
    >
  </div>
  <% if (mostrarFiltroCurso) { %>
  <!-- Dropdown para filtrar cursos -->
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownFiltroCurso" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="bi bi-filter-circle me-1"></i> Filtrar por Curso
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownFiltroCurso" id="lista-cursos">
  <% const cursos = ["", "Primero", "Segundo", "Tercero", "Cuarto", "Quinto"]; %>
  <% cursos.forEach(c => { %>
    <li>
      <a class="dropdown-item <%= cursoSeleccionado === c ? 'active' : '' %>" href="#" data-curso="<%= c %>">
        <%= c || "Todos" %>
      </a>
    </li>
  <% }) %>
</ul>

  </div>
<% } else if (textoBotonAgregar && idModalAgregar) { %>
  <!-- BotÃ³n agregar -->
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= idModalAgregar %>">
    <i class="bi bi-person-plus me-1"></i> <%= textoBotonAgregar %>
  </button>
<% } %>


  
</header>

