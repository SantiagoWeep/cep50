<header class="d-flex justify-content-between align-items-center p-2 position-relative">
  <!-- Lado izquierdo: búsqueda -->
  <div class="d-flex align-items-center">
    <i class="bi bi-search"></i>&nbsp;&nbsp;
    <input 
      type="text" 
      class="form-control form-control-sm" 
      placeholder="Buscar por <%= tipoBusqueda %>..." 
      id="<%= idInputBusqueda %>" 
      style="width: 300px;"
    >
  </div>

  <!-- Lado derecho: filtros y agregar -->
  <div class="d-flex gap-2">
    <% if (mostrarFiltroCurso) { %>
  <% const cursos = ["", "Primero", "Segundo", "Tercero", "Cuarto", "Quinto"]; %>

  <!-- En pantallas grandes: dentro del header -->
  <div class="dropdown d-none d-lg-inline">
    <button 
      class="btn btn-secondary dropdown-toggle"  
      type="button" 
      id="dropdownFiltroCurso" 
      data-bs-toggle="dropdown" 
      aria-expanded="false"
    >
      <i class="bi bi-sort-down"></i> Filtrar por Curso
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownFiltroCurso" id="lista-cursos">
      <% cursos.forEach(c => { %>
        <li>
          <a class="dropdown-item <%= cursoSeleccionado === c ? 'active' : '' %>" 
             href="#" 
             data-curso="<%= c %>">
            <%= c || "Todos" %>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- En móviles: flotante arriba -->
  <div class="dropdown d-lg-none">
    <button 
      class="btn btn-secondary dropdown-toggle position-fixed"  
      style="top: 70px; left: 20px; z-index: 1080;"
      type="button" 
      id="dropdownFiltroCursoMovil" 
      data-bs-toggle="dropdown" 
      aria-expanded="false"
    >
      <i class="bi bi-sort-down"></i>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownFiltroCursoMovil" id="lista-cursos-movil">
      <% cursos.forEach(c => { %>
        <li>
          <a class="dropdown-item <%= cursoSeleccionado === c ? 'active' : '' %>" 
             href="#" 
             data-curso="<%= c %>">
            <%= c || "Todos" %>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
<% } %>


    <% if (textoBotonAgregar && idModalAgregar) { %>
  <!-- En pantallas grandes: botón dentro del header -->
  <button 
    class="btn btn-primary d-none d-lg-inline" 
    data-bs-toggle="modal" 
    data-bs-target="#<%= idModalAgregar %>"
  >
    <i class="bi bi-person-plus"></i> <%= textoBotonAgregar %>
  </button>

  <!-- En móviles: botón flotante -->
  <button 
    class="btn btn-primary d-lg-none position-fixed" 
    style="top: 20px; right: 20px; z-index: 1080;" 
    data-bs-toggle="modal" 
    data-bs-target="#<%= idModalAgregar %>"
  >
    <i class="bi bi-person-plus"></i>
  </button>
<% } %>

  </div>
</header>
