<header class="bg-white border-bottom p-3 d-flex justify-content-between align-items-center shadow-sm sticky-top">
  <div class="d-flex align-items-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
</svg>&nbsp;&nbsp;
    <input 
      type="text" 
      class="form-control form-control-sm" 
      placeholder="Buscar por <%= tipoBusqueda %>..." 
      id="<%= idInputBusqueda %>" 
      style="width: 300px;"
    >
  </div>
  <% if (mostrarFiltroCurso) { %>
  <!-- Dropdown para filtrar cursos -->
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownFiltroCurso" data-bs-toggle="dropdown" aria-expanded="false">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-sort-down" viewBox="0 0 16 16">
  <path d="M3.5 2.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 11.293zm3.5 1a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1z"/>
</svg>&nbsp; Filtrar por Curso
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownFiltroCurso" id="lista-cursos">
  <% const cursos = ["", "Primero", "Segundo", "Tercero", "Cuarto", "Quinto"]; %>
  <% cursos.forEach(c => { %>
    <li>
      <a class="dropdown-item <%= cursoSeleccionado === c ? 'active' : '' %>" href="#" data-curso="<%= c %>">
        <%= c || "Todos" %>
      </a>
    </li>
  <% }) %>
</ul>

  </div>
<% } else if (textoBotonAgregar && idModalAgregar) { %>
  <!-- BotÃ³n agregar -->
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= idModalAgregar %>">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
  <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
  <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5"/>
</svg>  <%= textoBotonAgregar %>
  </button>
<% } %>


  
</header>

