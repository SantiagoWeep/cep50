<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Panel Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    /* Sidebar base */
    .sidebar {
      width: 200px;
      height: 100%;
      position: fixed;
      left: 0;
      top: 0;
      background: #163758; /* bg-dark */
      color: white;
      transition: transform 0.3s ease;
      z-index: 1050; /* por encima del contenido */
    }

    /* Por defecto en móviles: oculto */
    .sidebar-oculto {
      transform: translateX(-100%);
    }

    /* En pantallas grandes: siempre visible */
    @media (min-width: 992px) {
      .sidebar {
        transform: translateX(0) !important;
      }
      .overlay {
        display: none !important;
      }
    }

    /* Ajuste del contenido principal */
    .contenido-principal {
      margin-left: 200px;
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    @media (max-width: 991px) {
      .contenido-principal {
        margin-left: 0;
        width: 100%;
      }
    }

    /* Overlay para click fuera */
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 1040; /* por debajo del sidebar */
    }
    .overlay.activo {
      display: block;
    }

    /* Botón hamburguesa por encima de todo */
    #toggleSidebar {
      position: relative;
      z-index: 1100;
    }
  </style>
</head>
<body>

  <!-- Botón hamburguesa solo visible en móviles -->
  <button class="btn btn-dark d-lg-none m-3 position-fixed" id="toggleSidebar">
    <i class="bi bi-list fs-3"></i>
  </button>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar sidebar-oculto">
    <div class="p-3">
      <h5>Panel Admin</h5>
      <hr class="text-secondary" />
      <ul class="nav flex-column">
        <li class="nav-item">
          <a href="/administracion" class="nav-link text-white">
            <i class="bi bi-person-standing-dress"></i> Alumnos
          </a>
        </li>
        <li class="nav-item">
          <a href="/profesores" class="nav-link text-white">
            <i class="bi bi-eyeglasses"></i> Profesores
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/boletines" class="nav-link text-white">
            <i class="bi bi-file-earmark-bar-graph"></i> Boletines
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/notas" class="nav-link text-white">
            <i class="bi bi-card-checklist"></i> Calificaciones
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Overlay para móviles -->
  <div id="overlay" class="overlay"></div>

  <script>
    const toggleBtn = document.getElementById("toggleSidebar");
    const sidebar = document.getElementById("sidebar");
    const overlay = document.getElementById("overlay");

    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("sidebar-oculto");
      overlay.classList.toggle("activo");
    });

    overlay.addEventListener("click", () => {
      sidebar.classList.add("sidebar-oculto");
      overlay.classList.remove("activo");
    });
  </script>

</body>
</html>
